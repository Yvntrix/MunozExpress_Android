<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".AccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update Profile Info"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp" />
                <ImageButton
                    android:id="@+id/signOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-60dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    style="?android:buttonBarButtonStyle"
                    android:src="@drawable/ic_logout"
                    android:paddingBottom="5dp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Upload Picture of your ID (Any ID)"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:gravity="center"
                android:text="Driver’s license, PhilHealth, IDVoter’s ID, School ID, etc."/>
            <androidx.cardview.widget.CardView
                android:id="@+id/imgup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="5dp"
                android:layout_gravity="center"
                app:cardElevation="4dp">

                <ImageView
                    android:layout_margin="10dp"
                    android:id="@+id/profp"
                    android:background="@drawable/profile"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                   />
            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="Mobile Number"/>
            <EditText
                android:id="@+id/Aphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_input2"
                android:hint="Mobile Number"
                android:inputType="none"
                android:minHeight="48dp"
                android:padding="12dp"
                android:textColor="#a1a1a1"
                android:textColorHint="#a1a1a1"
                android:enabled="false"
                android:textSize="14sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="Email"/>
            <EditText
                android:id="@+id/Aemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_input2"
                android:hint="Email"
                android:inputType="none"
                android:minHeight="48dp"
                android:padding="12dp"
                android:textColor="#a1a1a1"
                android:textColorHint="#a1a1a1"
                android:enabled="false"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="First Name"/>

            <EditText
                android:id="@+id/Afname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_input2"
                android:hint="First Name"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="12dp"
                android:textColor="#000"
                android:textColorHint="#555"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="Last Name"/>

            <EditText
                android:id="@+id/Alname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_input2"
                android:hint="Last Name"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="12dp"
                android:textColor="#000"
                android:textColorHint="#555"
                android:textSize="14sp" />

            <android.widget.Button
                android:id="@+id/changePassBtn"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="end"
                android:background="@drawable/custom_input2"
                android:textColor="#000"
                android:textSize="14sp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:textAllCaps="false"
                android:text="Change Password"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <android.widget.Button
                android:id="@+id/updateBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/custom_button2"
                android:textColor="#fafafa"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:text="Update Profile"/>
        </LinearLayout>

<!--        <android.widget.Button-->
<!--            android:id="@+id/signOutBtn"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="5dp"-->
<!--            android:layout_gravity="center_horizontal"-->
<!--            android:background="@drawable/custom_button2"-->
<!--            android:textColor="#fafafa"-->
<!--            android:textStyle="bold"-->
<!--            android:text="Sign out"/>-->
    </LinearLayout>



</FrameLayout>